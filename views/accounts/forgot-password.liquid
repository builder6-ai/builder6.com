<!DOCTYPE html>
<html lang="zh-CN">
<head>
    {% render 'partials/head.liquid' %}
    <title>Available - Builder6</title>
</head>
<body class="bg-black text-white flex items-center justify-center min-h-screen font-sans antialiased selection:bg-blue-500 selection:text-white overflow-hidden" x-data="forgotPasswordPage">
    {% render 'partials/notifications.liquid' %}
    
    <!-- Ambient Background Effects -->
    <div class="fixed inset-0 z-0 pointer-events-none">
        <div class="absolute top-[-10%] right-[-10%] w-[40%] h-[40%] rounded-full bg-blue-600/20 blur-[100px]"></div>
        <div class="absolute bottom-[-10%] left-[-10%] w-[40%] h-[40%] rounded-full bg-purple-600/20 blur-[100px]"></div>
    </div>

    <div class="relative z-10 bg-[#1c1c1e]/80 backdrop-blur-2xl p-10 rounded-[2rem] shadow-2xl w-[420px] border border-white/10 ring-1 ring-white/5">
        <div class="flex justify-center mb-8">
            <img src="/logo.svg" alt="Logo" class="w-14 h-14 drop-shadow-lg">
        </div>
        <h2 class="text-3xl font-bold mb-4 text-center text-white tracking-tight">Forgot Password</h2>
        <p class="text-center text-gray-400 mb-8 text-sm">Enter your email and we'll send you instructions to reset your password.</p>
        
        <form @submit.prevent="resetPassword" class="space-y-5">
            <div class="space-y-1">
                <label class="block text-xs font-medium text-gray-400 ml-1 uppercase tracking-wider">Email</label>
                <input type="email" x-model="email" required class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 transition-all duration-200" placeholder="name@example.com">
            </div>
            
            <button type="submit" class="w-full bg-[#007AFF] hover:bg-[#0062cc] text-white py-3 rounded-xl font-semibold transition-all duration-200 shadow-lg shadow-blue-900/30 hover:shadow-blue-900/50 transform hover:-translate-y-0.5 mt-2">Send Reset Link</button>
        </form>

        <div class="mt-8 text-center text-sm text-gray-400">
            <a href="/accounts/login" class="text-[#0A84FF] hover:text-[#409CFF] font-medium transition-colors flex items-center justify-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                Back to Sign In
            </a>
        </div>
    </div>

    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('forgotPasswordPage', () => ({
                email: '',
                async resetPassword() {
                    try {
                        const res = await fetch('/api/auth/forget-password', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ email: this.email, redirectTo: '/accounts/password/new' }) // better-auth path might vary, standard is /api/auth/forget-password
                        });

                        const data = await res.json();
                        
                        // better-auth returns { status: boolean } or similar
                        
                        if (res.ok) {
                            $notify('Password reset email sent!', 'success');
                        } else {
                            $notify(data.message || 'Failed to send reset email', 'error');
                        }
                    } catch (err) {
                        console.error(err);
                        $notify('An error occurred', 'error');
                    }
                }
            }))
        })
    </script>
</body>
</html>
