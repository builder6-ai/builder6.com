{% layout 'app' %}

{% block content %}
<div class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8" x-data="changePasswordPage">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-white mb-2">Security</h1>
            <p class="text-gray-400">Manage your password and security settings.</p>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Sidebar Navigation -->
        <div class="md:col-span-1 space-y-2">
            <a href="/accounts/profile" class="block px-4 py-2 rounded-lg text-gray-400 hover:text-white hover:bg-white/5 transition-colors">General</a>
            <a href="/accounts/password/change" class="block px-4 py-2 rounded-lg bg-white/10 text-white font-medium">Security</a>
        </div>

        <!-- Main Content -->
        <div class="md:col-span-2 space-y-6">
            <!-- Change Password -->
            <div class="bg-[#1c1c1e] rounded-2xl border border-white/10 p-6 shadow-lg">
                <h3 class="text-xl font-bold text-white mb-6">Change Password</h3>
                
                <form @submit.prevent="changePassword" class="space-y-4">
                    <div class="space-y-1">
                        <label class="block text-xs font-medium text-gray-400 ml-1 uppercase tracking-wider">Current Password</label>
                        <input type="password" x-model="currentPassword" required class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 transition-all duration-200">
                    </div>

                    <div class="space-y-1">
                        <label class="block text-xs font-medium text-gray-400 ml-1 uppercase tracking-wider">New Password</label>
                        <input type="password" x-model="newPassword" required class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 transition-all duration-200">
                    </div>

                     <div class="space-y-1">
                        <label class="block text-xs font-medium text-gray-400 ml-1 uppercase tracking-wider">Confirm New Password</label>
                        <input type="password" x-model="confirmPassword" required class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 transition-all duration-200">
                    </div>

                    <div class="pt-4 flex justify-end">
                        <button type="submit" class="px-6 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-xl font-semibold transition-colors shadow-lg shadow-blue-900/20">
                            Update Password
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('changePasswordPage', () => ({
            currentPassword: '',
            newPassword: '',
            confirmPassword: '',

            async changePassword() {
                if (this.newPassword !== this.confirmPassword) {
                    $notify('New passwords do not match', 'error');
                    return;
                }

                try {
                    const res = await fetch('/api/auth/change-password', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ 
                            currentPassword: this.currentPassword,
                            newPassword: this.newPassword
                        })
                    });
                     if (res.ok) {
                        $notify('Password changed successfully', 'success');
                        this.currentPassword = '';
                        this.newPassword = '';
                        this.confirmPassword = '';
                    } else {
                        const data = await res.json();
                        $notify(data.message || 'Failed to change password', 'error');
                    }
                } catch (err) {
                    console.error(err);
                    $notify('An error occurred', 'error');
                }
            }
        }))
    })
</script>
{% endblock %}
