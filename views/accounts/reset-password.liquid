<!DOCTYPE html>
<html lang="zh-CN">
<head>
    {% render 'partials/head.liquid' %}
    <title>Reset Password - Builder6</title>
</head>
<body class="bg-black text-white flex items-center justify-center min-h-screen font-sans antialiased selection:bg-blue-500 selection:text-white overflow-hidden" x-data="resetPasswordPage">
    {% render 'partials/notifications.liquid' %}
    
    <!-- Ambient Background Effects -->
    <div class="fixed inset-0 z-0 pointer-events-none">
        <div class="absolute top-[-10%] right-[-10%] w-[40%] h-[40%] rounded-full bg-blue-600/20 blur-[100px]"></div>
        <div class="absolute bottom-[-10%] left-[-10%] w-[40%] h-[40%] rounded-full bg-purple-600/20 blur-[100px]"></div>
    </div>

    <div class="relative z-10 bg-[#1c1c1e]/80 backdrop-blur-2xl p-10 rounded-[2rem] shadow-2xl w-[420px] border border-white/10 ring-1 ring-white/5">
        <div class="flex justify-center mb-8">
            <img src="/logo.svg" alt="Logo" class="w-14 h-14 drop-shadow-lg">
        </div>
        <h2 class="text-3xl font-bold mb-4 text-center text-white tracking-tight">Set New Password</h2>
        <p class="text-center text-gray-400 mb-8 text-sm">Please enter your new password below.</p>
        
        <form @submit.prevent="resetPassword" class="space-y-5">
             <div class="space-y-1">
                <label class="block text-xs font-medium text-gray-400 ml-1 uppercase tracking-wider">New Password</label>
                <input type="password" x-model="password" required class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 transition-all duration-200" placeholder="••••••••">
            </div>
             <div class="space-y-1">
                <label class="block text-xs font-medium text-gray-400 ml-1 uppercase tracking-wider">Confirm Password</label>
                <input type="password" x-model="confirmPassword" required class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 transition-all duration-200" placeholder="••••••••">
            </div>
            
            <button type="submit" class="w-full bg-[#007AFF] hover:bg-[#0062cc] text-white py-3 rounded-xl font-semibold transition-all duration-200 shadow-lg shadow-blue-900/30 hover:shadow-blue-900/50 transform hover:-translate-y-0.5 mt-2">Reset Password</button>
        </form>
    </div>

    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('resetPasswordPage', () => ({
                password: '',
                confirmPassword: '',
                token: '',

                init() {
                    const urlParams = new URLSearchParams(window.location.search);
                    this.token = urlParams.get('token');
                    if(!this.token) {
                         $notify('Invalid or missing reset token', 'error');
                    }
                },

                async resetPassword() {
                     if (this.password !== this.confirmPassword) {
                        $notify('Passwords do not match', 'error');
                        return;
                    }
                    if (!this.token) {
                        $notify('Missing reset token', 'error');
                        return;
                    }

                    try {
                        const res = await fetch('/api/auth/reset-password', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ password: this.password, token: this.token })
                        });

                        if (res.ok) {
                            $notify('Password reset successfully', 'success');
                            setTimeout(() => window.location.href = '/accounts/login', 1500);
                        } else {
                            const data = await res.json();
                            $notify(data.message || 'Failed to reset password', 'error');
                        }
                    } catch (err) {
                        console.error(err);
                        $notify('An error occurred', 'error');
                    }
                }
            }))
        })
    </script>
</body>
</html>
